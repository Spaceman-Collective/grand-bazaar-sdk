{
    "compilerOptions": {
      "target": "ES2020",
      "esModuleInterop": true,
      "module": "ES2015",
      "declaration": true,
      "outDir": "./build",
      "skipLibCheck": true,
      "moduleDetection": "force",
      "moduleResolution": "Bundler",
      "types": ["mocha", "jest"],
      "noImplicitAny": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }